<div id="application_view_page">
    
    {?include file="$breadcrumb_template"?}
    <h3>{?$application_title?}</h3>
    <div id="application_container">
        <object width="{?$application_data.site_application_width?}" height="{?$application_data.site_application_height?}"
                <param name="movie" value="{?$application_data.site_application_file_path?}" />
                <param name=quality value=high />
                <param name="wmode" value="transparent">
                <embed src="{?$application_data.site_application_file_path?}" 
                    type="application/x-shockwave-flash" wmode="transparent" width="{?$application_data.site_application_width?}" height="{?$application_data.site_application_height?}">
                </embed>
        </object>
        <div id="application_description">
            Added on {?$application_data.site_application_date_added?}<br>
            {?$application_data.site_application_views?} views<br>
            {?$application_data.site_application_description?}
        </div>
    </div>
             
</div>
